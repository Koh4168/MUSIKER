<div class = "contents row">
    <%= form_tag("/events/#{@event.id}", method: :patch) do %>
    <h3>
        編集する
    </h3>
    <input type="text" name="image" value="<%= @event.image %>" placeholder="image Url" autofocus="true"></input>
    <input type="string" name="name"   value="<%= @event.name %>"placeholder="イベント名" ></input>
     <input type="string" name="place" value="<%= @event.place %>"placeholder="場所"  ></input>
     <input type="string" name="price" value="<%= @event.price %>" placeholder="価格" ></input>
     <textarea name="text" placeholder="text" rows="10" cols="30"><%= @event.text %></textarea>
     <input type="datetime" name="scedule" value="<%= @event.scedule %>" placeholder="日付カレンダー" ></input>
     <input type="datetime" name="scedule"value="<%= @event.scedule %>" placeholder="時間　選択ボタン"></input>
     <input type="text" name="link" value="<%= @event.link %>" placeholder="リンク先"></input>
     <input type="submit" value="更新する">
   <% end %>
</div>


