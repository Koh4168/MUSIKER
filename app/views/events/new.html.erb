  <div class="contents row">
  <%= form_for (@event) do |f| %>
    <h2>
      イベント投稿
    </h2>
    <%= f.label "イベント画像" %>
    <%= f.file_field :image %><br><br>
    
    <%= f.label "イベント名" %>
    <%= f.text_field :name, placeholder: 'イベント名'%><br><br>
    
    <%= f.label "開催地" %>
    <%= f.text_field :place, placeholder: '開催地'%><br><br>
  
    
    <%= f.label "イベント詳細" %>
    <%= f.text_area :text, placeholder: '詳細',style: 'width: 50%; height: 100px'%><br><br>
    
    <%= f.label "イベントURL" %>
    <%= f.text_field :link, placeholder: 'リンク先'%><br><br>
    
    <%= f.label "開催日" %>
    <%= f.date_field_tag :scedule %><br><br>
    
    <%= f.label "open" %>
     <%= f.time_select :scedule, {}, class: 'form-control' %><br><br>
    
    <%= f.label "start" %>
    <%= f.time_select :scedule, {}, class: 'form-control' %><br><br>
  
      <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn--block" do %>
              投稿する<i class="icon-arrow-right"></i>
          <% end %>
      </div>
  <% end %>
</div>
