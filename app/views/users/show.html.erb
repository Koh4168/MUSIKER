<%= stylesheet_link_tag "users" %>
 
<div class="mypage">
    <div class="user_info">
        <span><%= image_tag @user.image.url %></span>
        <div class='user_name'><h1><%= "#{@user.name}" %></h1></div>
    </div>
    <div class="user_text">
        <div class="user_title"><P>Introduce</P></div>
            <h3><%= "#{@user.text}" %> </h3>
        <div class="user_title"><p>Link</p></div>
