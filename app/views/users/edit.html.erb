<h3>
    ユーザー情報を編集する
</h3>

<%= form_for (@user) do |f| %>
    
    <%= f.label "プロフィール写真" %>
    <%= f.file_field :image %><br><br>
    
    <%= f.label "名前" %>
    <%= f.text_field :name, placeholder: 'イベント名'%><br><br>
    
    <%= f.label "自己紹介" %>
    <%= f.text_area :text, placeholder: '詳細',style: 'width: 50%; height: 100px'%><br><br>
    
    <%= f.label 'link編集' %>
    <%= f.text_field :link, placeholder: 'リンク先'%><br><br>
     
     <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn--block" do %>
              変更する<i class="icon-arrow-right"></i>
          <% end %>
     </div>
<% end %>