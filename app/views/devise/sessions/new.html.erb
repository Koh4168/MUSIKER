<div class="login">
  <div class="login-triangle"></div>
    <h2 class="login-header">LOG IN</h2>
 
  <div class="login-container">
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if alert %>
        <p class='alert alert-danger'><%= alert %></p>
      <% end %>
     
      <p><%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'input form-control' %></p>
      <p><%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード', class: 'input form-control' %></p>
      <p><%= f.submit class: 'btn btn-primary withripple', value: 'ログイン' %></p>
 
      <% if devise_mapping.rememberable? %>
        <div class='checkbox'>
          <label>
            <input id='user_remember_me' name='user[remember_me]' type='checkbox' value='1'>
            <%= f.label :remember_me, 'ログイン情報を記憶する', class: 'memory-check' %>
          </label>
        </div>
        <% end %>
      <% end %>
  </div>
      
      <div class='login_link'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>


